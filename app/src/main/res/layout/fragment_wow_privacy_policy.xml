<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".WowPrivacyPolicyFragment">

    <ScrollView
        android:id="@+id/WowText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="4dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="115dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/wowPrivText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/karlasemibold"
                android:gravity="center"
                android:text="@string/text"
                android:textColor="#0F100F"
                android:textSize="22sp" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/bWowBack"
        android:layout_width="321dp"
        android:layout_height="82dp"
        android:text="Back"
        android:background="@drawable/button_menu"
        android:fontFamily="@font/karlasemibold"
        android:textAllCaps="false"
        android:textColor="#0F100F"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/WowText" />

</androidx.constraintlayout.widget.ConstraintLayout>